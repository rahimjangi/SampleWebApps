@model MVC.Models.OrderDisplayModel

@{
    ViewData["Title"] = "Display";
}

@if (Model.Order is null)
{


    <h3>The requested order was not found!</h3> }
else
{

    <table class="table">
        <tbody>
            <tr>
                <td><strong>Order Name</strong></td>
                <td>@Model.Order.OrderName</td>
            </tr>
            <tr>
                <td><strong>Order Date</strong></td>
                <td>@Model.Order.OrderDate</td>
            </tr>
            <tr>
                <td><strong>Order Quantity</strong></td>
                <td>@Model.Order.Quantity</td>
            </tr>
            <tr>
                <td><strong>Order Total</strong></td>
                <td>@string.Format("{0:C}", Model.Order.Total)</td>
            </tr>
            <tr>
                <td><strong>Item ordered</strong></td>
                <td>@Model.ItemPurchased</td>
            </tr>
        </tbody>
    </table>
    <form asp-action="Update">

        <input name="id" value="@Model.Order.Id" type="hidden" />
        <div class="form-group">
            <label class="control-label">Order Name</label>
            <input name="orderName" value="@Model.Order.OrderName" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Update Order Name" class="btn btn-primary" />
        </div>
    </form>
    <form asp-action="Delete" method="get">

        <input name="id" value="@Model.Order.Id" type="hidden" />
        <input name="orderName" value="@Model.Order.OrderName" class="form-control" type="hidden"/>
        <div class="form-group">
            <input type="submit" value="Delete Order" class="btn btn-danger" />
        </div>
    </form>
}




